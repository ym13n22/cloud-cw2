<!doctype html>
<html lang="en">

    <%- include('header'); -%>

    <h2 class="title">ECS Example Game</h2>

    <div id="game">
        <div v-if="connected && currentStage === 'Auth'">
            <%- include('chat'); -%>
            <%- include('userAuth'); -%>
        </div>
        <div v-else-if="connected && currentStage === 'Waiting'">
            <%- include('waiting'); -%>
        </div>
        <div v-else-if="connected && currentStage === 'PromptCollection'">
            <%- include('promptCollect'); -%>
        </div>
        <div v-else-if="connected && currentStage === 'Answer'">
            <%- include('answerStage'); -%>
        </div>
        <div v-else-if="connected && currentStage === 'Voting'">
            <%- include('voting'); -%>
        </div>
        <div v-else-if="connected && currentStage === 'ScoresShow'">
            <p>this round end waiting for check and save the outcome...</p>
            <div  class="buttonLeft-container">
                <button  @click="submitPrompt">submit prompt</button>
            </div>
        
            <div v-if="submitPromptHalf" class="host-container">
                <h5> think of a funny question or prompt</h5>
            </div>
            <div v-if="submitPromptHalf" class="prompt-container">
                <input type="text" id="prompt" v-model="prompt">
            </div>
            <div v-if="submitPromptHalf" class="button-container">
                <button  @click="prompt_submitted">Done</button>
            </div>
            <div v-if="isHost" class="buttonRight-container">
                <button  @click="thisRoundEnd">next </button>
            </div>
        </div>
        <div v-else-if="connected && currentStage === 'FinalScore'">
            <p>game over...</p>
            <div class="buttonRight-container" v-if="username !==''">
                <button @click="thisGameEnd">Start the New Game</button>
            </div>
        </div>
        <div v-else>
            <p>Connecting...</p>
        </div>
    </div>

    <%- include('footer'); -%>

</html>
