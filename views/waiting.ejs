<div id="waiting_room">
    <div class="input-container">
        <h3> {{ hostName }}</h3>
    </div>
    <div class="host-container">
        <h4> Waiting for everyone to join!</h4>
    </div>

    <ul class="players-list">
        <li v-for="(player, index) in players" :key="index">
            {{ player }}
        </li>
    </ul>
    
    
    
    <div v-if="isHost" class="button-container">
        <button @click="gameStart">game start</button>
    </div>
    <div id="status" style="color: red;">{{ statusMessageGameStart }}</div>
    
</div>